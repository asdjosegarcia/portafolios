    text-align: center;
    font-size: 1.5rem;
    color: #ffffff;
    text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.9), -1px -1px 4px rgba(255, 255, 255, 0.9);
} */

/*///////////////////////////////////////////////////estados  */
.about__skills__container .learning{
        background-color: #020617;
        /* box-shadow: none; */
    box-shadow: .5rem .3rem 0px #64748bb2, 10px 10px 4px rgba(0, 0, 0, 0.9), -1px -1px 4px rgba(255, 255, 255, 0.068) ;
    position: relative;

}
.about__skills__container .learning svg{
    fill: #475569 ;
}
.about__skills__container .learning p{ 
    color: #64748b ;
    text-shadow:none;
}
.about__skills__container .learning .card__message{
    position: absolute;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    text-align: center;
    font-size: 2rem;
    background-color: #00000000;
    color:#00000000 ;
    transition: color 0.3s ease-in-out;
}

.about__skills__container .learning .card__message:hover{
    background-color: rgba(0, 0, 0, 0.623);
    backdrop-filter: blur(1px);
    color: #94a3b8;
}
@media screen and (max-width: 1100px) {
    .aboutSection__info{
        width: 90%;
        display: grid;
        grid-template-columns: repeat(1, auto);
        grid-template-rows: repeat(6, auto);
        grid-template-areas: 
        "title    " 
        "section1  "
        "section2"
        "title2  "
        "skills "
        ;
    }
    .aboutSection__info img{
        justify-self: center;
        margin: 0;
    }
    .skill__card{
    box-shadow: .5rem .3rem 0px rgb(44, 96, 121), 10px 10px 4px rgba(0, 0, 0, 0.9) ;

    }
    .skill__card svg, .svg{
        margin: 2.8rem;
        width: 4rem;
        height: 4rem;
        /* margin: 2rem;    */
    }
    /* .skill__card img{
        margin: 1rem;   

    } */
    .about__skills__container .learning .card__message{
        font-size: 1.5rem;
    }
}
@media screen and (min-width: 1100px) {
.skill__card{
    box-shadow: .5rem .3rem 0px rgb(44, 96, 121), 10px 10px 4px rgba(0, 0, 0, 0.9), -1px -1px 4px rgba(255, 255, 255, 0.9) ;
}
}
</style>