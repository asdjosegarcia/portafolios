<style>
    .aboutSection__container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.aboutSection__info{
    width: 60%;
    display: grid;
    grid-template-columns: repeat(3, auto);
    grid-template-rows: repeat(6, auto);
    grid-template-areas: 
    "title    title    title" 
    "section1 section2 section2"
    "section1 section2 section2"
    "title2   title2   title2"
    "skills   skills   skills"
    ;
    border-radius: 10px;
    padding: 20px;
    background-color: #0f172a1a;
    border: 2px solid rgb(44, 96, 121);

}
.about__title{
    font-weight: bold;
    text-align: center;
    font-size: 2.5rem;
}
.about__title--about {
    grid-area: title;
    padding-bottom: 4rem;
}

.aboutSection__info img{
    grid-area: section1;
    height: 360px;
    width: 300px;
    border-radius: 10px;
    justify-self: end;
    margin-right: 15%;
    box-shadow: .5rem .3rem 0px rgb(44, 96, 121), 10px 10px 4px rgba(0, 0, 0, 0.9), -1px -1px 4px rgba(255, 255, 255, 0.068) ;

}
.aboutSection__info ul{
    grid-area: section2;
    font-size: 1.7rem;
    list-style: none;
    padding-left: 0;
}
.aboutSection__info .about__item{
    display: flex;
    align-items: center;
}

.about__skills--subtitle{
 width: 100%;
 font-size: 1.9rem;
 margin-top: 5rem;
}

.about__title--skills{
grid-area: title2;
}
.about__skills__container{
    grid-area: skills;
    display: flex;
    /* justify-content: space-between; */
    justify-content: flex-start ;

    width: 100%;
    flex-wrap: wrap; /* que el contenido se distribulla en varias filas */
    padding-bottom:5%;
}
.about__skills__container svg, .svg  {
    margin: 3rem;
    width: 5.7rem;
    height: 6rem;
}

